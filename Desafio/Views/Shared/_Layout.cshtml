<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafio: Descubra o Assassino</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/flatui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Descubra o Assassino", "Index", "Home", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href='@Url.Action("Play", "Home")'><i class="icon-play icon-white"></i> Resposta</a></li>
                        <li><a href='@Url.Action("Find", "Home")'><i class="icon-search icon-white"></i> Descobrir</a></li>
                        <li><a href='@Url.Action("About", "Home")'><i class="icon-user icon-white"></i> Sobre</a></li>
                        <li><a href='@Url.Action("Contact", "Home")'><i class="icon-envelope icon-white"></i> Contato</a></li>
                        <li><a href='@Url.Action("Lista", "Home")'><i class="icon-list icon-white"></i> Dados</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <div class="panel-footer text-center">
            <p>&copy; @DateTime.Now.Year - Descubra o Assassino - Lucas Lima Fonseca</p>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>