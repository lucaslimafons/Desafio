@model Desafio.Models.Data

<fieldset>
    <legend>Dados</legend>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="palette palette-wet-asphalt">Suspeitos</th>
                <th class="palette palette-wet-asphalt">Locais</th>
                <th class="palette palette-wet-asphalt">Armas</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i <= Model.locals.Count; i++)
            {
                <tr>
                    <td>
                        @if (Model.suspects.Count > i)
                        {
                            @Html.Label(Model.suspects[i])
                        }
                    </td>
                    <td>
                        @if (Model.locals.Count > i)
                        {
                            @Html.Label(Model.locals[i])
                        }
                    </td>
                    <td>
                        @if (Model.guns.Count > i)
                        {
                            @Html.Label(Model.guns[i])
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</fieldset>

<div class="row">
    <div class="form-actions text-right">
        <button onclick='window.location="@Url.Action("Index", "Home")";' class="btn btn-large palette palette-alizarin">Voltar</button>
    </div>
</div>